{% extends 'base.twig' %}

{% block title %}Mes Favoris - Cinetech{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-white mb-8">Mes Favoris</h1>

    {% if favoris is empty %}
        <div class="no-favoris">
            <p>Vous n'avez pas encore de favoris.</p>
            <a href="/Cinetech" class="text-blue-400 hover:text-blue-300 mt-4 inline-block">
                Découvrir des films et séries
            </a>
        </div>
    {% else %}
        <div class="favoris-grid">
            {% for favori in favoris %}
                <div class="favori-item">
                    <img src="{{ favori.poster_path }}" alt="{{ favori.title }}" class="w-full h-64 object-cover">
                    <div class="favori-item-content">
                        <h3 class="favori-item-title">{{ favori.title }}</h3>
                        <p class="favori-item-type">{{ favori.type }}</p>
                        <button class="favori-button active" data-id="{{ favori.id }}" data-type="{{ favori.type }}">
                            <i class="fas fa-heart"></i>
                        </button>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}

{% block scripts %}
<script src="/Cinetech/public/js/favoris.js"></script>
{% endblock %} 